@model IQueryable<Customer>
@{Layout = "_Layout";}
@{ViewBag.Title = "Основатели";}
<div>
    <div class="row justify-content-center ">
        <div class="col-8">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">ИНН</th>
                        <th scope="col">Название</th>
                        <th scope="col">Дата добавления</th>
                        <th scope="col">Дата обновления</th>
                        <th scope="col">Изменить</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model)
                    {
                        <tr>
                            <th scope="row">@m.CustomerID</th>
                            <td class="edit">@m.INN</td>
                            <td class="edit">@m.name </td>
                            <td> @m.DateAdd </td>
                            <td> @m.DateUpdate </td>
                            <td> <a asp-action="Edit" asp-route-customerId="@m.CustomerID" class="btn btn-primary">Изменить</a> </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="row justify-content-end">
                <div class="col"></div>
                <a class="btn btn-primary" asp-route="AddCustomer">Добавить</a>
            </div>
        </div>
    </div>
</div>
